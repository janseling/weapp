/* pages/Blog/index.wxss */
.blog-list {
  margin: 0 20rpx 40rpx 20rpx;
  padding: 10rpx;
}
.blog-list .card {
  background: #fff;
  border-radius: 12rpx;
  box-shadow: 6rpx 10rpx 20rpx 2rpx rgba(0,0,0,0.05);
}
.blog-list .time {
  font-size: 22rpx;
  color: #999;
  text-align: center;
  width: 100%;
  display: block;
  position: relative;
  margin-bottom: 16rpx;
}
.blog-list .card .img {
  width: 100%;
  padding-bottom: 57%;
  position: relative;
}
.blog-list .card .img image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}
.blog-list .card .title {
  display: block;
  padding: 20rpx;
  font-size: 42rpx;
  line-height: 64rpx;
}