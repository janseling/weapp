/* pages/Lab/index.wxss */
view {
  text-align: center;
}
.wrap {
  width: 100vw;
  height: 88vh;
  display: flex;
  align-items: center;
}
.card {
  margin: 0 auto;
  height: 80%;
  width: 80%;
  border-radius: 8rpx;
  box-shadow: 6rpx 10rpx 20rpx 8rpx rgba(0,0,0,0.1);
}
.preview {
  position: relative;
  width: calc(100% - 40rpx);
  margin: 20rpx;
  padding-bottom: 100%;
  border-radius: 6rpx;
  border: 0.5rpx #eee solid;
}
.title {
  font-size: 50rpx;
  line-height: 18vw;
  display: block;
}
.tips {
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
  display: block;
}

@keyframes shake {
  5%,  95% { transform: translate3d(-2px, -3px, 0); }
  10%, 90% { transform: translate3d(-1px, -2px, 0); }
  15%, 85% { transform: translate3d(-4px, 1px, 0); }
  20%, 80% { transform: translate3d(2px, -1px, 0); }
  25%, 85% { transform: translate3d(3px, 2px, 0); }
  30%, 50%, 70% { transform: translate3d(-1px, 4px, 0); }
  35%, 55%, 75% { transform: translate3d(-4px, 2px, 0); }
  40%, 60% { transform: translate3d(-1px, -1px, 0); }
  45%, 65% { transform: translate3d(3px, 1px, 0); }
}
/* 手写识别 */
.lab-mnist .pic1 {
  position: absolute;
  width: 45vw;
  height: 45vw;
  left: 5%;
  bottom: 10%;
}
.lab-mnist .pic2 {
  position: absolute;
  width: 45vw;
  height: 45vw;
  right: 0;
  top: 10%;
  animation: shake 0.3s infinite cubic-bezier(.36,.07,.19,.97) both;
}

/* 重力模拟 */
.lab-gravity {
  background: #000;
}
.lab-gravity .pic1 {
  position: absolute;
  height: 68%;
  width: 100%;
  top: 16%;
  left: 0;
  right: 0;
}
.lab-gravity .pic2 {
  position: absolute;
  width: 100%;
  height: 80%;
  top: 13%;
  left: 0;
  right: 0;
  animation: shake 0.3s infinite cubic-bezier(.36,.07,.19,.97) both;
}